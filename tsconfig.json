{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"]
      // You can also add more if needed, e.g.:
      // "@/*": ["src/*"],
      // "@config/*": ["src/config/*"]
    },

    "target": "ES2022",
    "lib": ["ES2023"],

    "module": "ESNext",
    "moduleResolution": "Bundler",

    "noEmit": true, // ← critical: let tsx / nest / swc / esbuild handle emission
    "isolatedModules": true, // required when noEmit + bundler mode
    "allowImportingTsExtensions": true, // ← allows import "./foo.ts" (but you usually won't need it)

    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,

    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    /* Required for NestJS, TypeORM, class-validator/transformer, etc. */
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false,

    "types": ["node"]
  },

  "include": ["src/**/*", "test/**/*"],
  "exclude": ["node_modules", "dist"]
}
