{
  "name": "athleticore-backend",
  "version": "1.0.0",
  "description": "Express + TypeORM backend for Athleticore",
  "main": "src/main.ts",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/main.ts",
    "start:dev": "tsx watch src/main.ts",
    "start": "tsx src/main.ts",
    "build": "tsc",
    "start:prod": "node dist/main.js",
    "lint": "eslint .",
    "lint-fix": "eslint . --fix",
    "migration:generate": "tsx src/config/db.ts && tsx node_modules/typeorm/cli.js migration:generate src/server/migrations/migration -d src/server/database/database.ts",
    "migration:run": "tsx node_modules/typeorm/cli.js migration:run -d src/server/database/database.ts",
    "migration:revert": "tsx node_modules/typeorm/cli.js migration:revert -d src/server/database/database.ts",
    "migration:show": "tsx node_modules/typeorm/cli.js migration:show -d src/server/database/database.ts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "helmet": "^8.1.0",
    "pg": "^8.16.3",
    "reflect-metadata": "^0.2.2",
    "typeorm": "^0.3.28",
    "winston": "^3.19.0",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/node": "^25.0.8",
    "eslint": "^9.39.2",
    "nodemon": "^3.1.11",
    "prettier": "^3.7.4",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.21.0",
    "typeorm-ts-node-commonjs": "^0.3.20",
    "typescript": "^5.9.3"
  }
}
